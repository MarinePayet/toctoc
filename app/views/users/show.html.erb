<div class="ml-3">
  <h4 class="mb-3 user-show">Services</h4>
  <% if @user.services.blank? %>
    <p> <em> nothing to show </em></p>
  <% else %>
    <% @user.services.each do |service| %>
      <div class="service-card-with-user mb-3">
        <div class="service-card-body">
          <div class="service-card-body-elements-user ">
            <div class="service-card-body-elements-header">
              <h2><%= service.name %></h2>
            </div>
            <div class="service-card-body-elements-body">
              <p><%= service.description %> </p>
            </div>
            <div class="service-card-labels-user">
              <p class= "label-service-type-user"><%= service.typology %></p>
              <% if service.price %>
                <p class= "label-base label-price-user"><%=service.price%>‚Ç¨</p>
              <% else %>
                <p class= "label-base label-price-user">Free</p>
              <% end %>
              <% if service.available %>
                <p class= "label-base label-available-user" >available now</p>
              <% else %>
                <p class= "label-base label-not-available-user">not available</p>
              <% end %>
              <p>
                <%= link_to new_direct_message_path(query: params[:query], user_id: @user.id) do %>
                   <i class="fas fa-comments fa-comments-user"></i>
                <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>



<div class="ml-3">
  <h4 class="mb-3 user-show">Posts</h4>
  <% if @user.posts.blank? %>
    <p> <em> nothing to show </em></p>
  <% else %>
    <% @user.posts.each do |post| %>
      <div class="post-card">
          <div class="post-card-header">
            <div class="post-card-header-avatar">
              <%= image_tag post.user.photo, class:"avatar-large" %>
            </div>
            <div class="post-card-header-title">
                <p class="post-user-name"><%= post.user.first_name %></p>
                <p class="post-date"><%= post.created_at.strftime("%b %e - %H:%M") %></p>
            </div>
          </div>
          <div class="post-card-body">
            <p class="post-title"><%= post.title %></p>
            <p class="post-content"><%= post.content %></p>
          </div>
          <div class="post-card-bottom d-flex justify-content-between">
            <div class="d-flex align-items-center">
            <span data-controller="like" class="post-likes">
                <% if current_user.voted_for? post %>
                  <%= link_to "", like_post_path(post), class:"fas fa-thumbs-up", data: {action:"click->like#post"}, method: :put, remote: :true %>
                <% else %>
                  <%= link_to "", like_post_path(post), class:"far fa-thumbs-up", data: {action:"click->like#post"}, method: :put, remote: :true %>
                <% end %>
                <span data-target="like.count" class="post-results"><%= post.get_likes.size %></span>
            </span>
            <div class="d-flex ml-3"></div>
            <div><%= link_to "", post_path(post), class:"fas fa-comment card-bottom-icon"%></div><p class="post-results"><%= post.comments.size %></p>
            </div>
            <p class= "label-base label-post-type"> <%= post.category%></p>
          </div>
        </div>
    <% end %>
  <% end %>
</div>


<div class="ml-3">

  <h4 class="mb-3 user-show">Events</h4>

  <% if @user.events.blank? %>
    <p> nothing to show </p>
  <% else %>
    <% @user.events.each do |event| %>
      <div class="event-card-text">
        <div class="event-card-text-header">
          <div class="event-card-text-header-title">
            <h3><%= event.title %></h3>
          </div>

          <div class="event-card-avatars">
            <div class="event-card-avatars-date">
              <p class="month"><%= event.starting_at.strftime("%b.") %></p>
              <% if event.starting_at.strftime("%d") == "01" %>
                <p class="day"><%= event.starting_at.strftime("%dst") %></p>
              <% elsif event.starting_at.strftime("%d") == "02"  %>
                <p class="day"><%= event.starting_at.strftime("%dnd") %></p>
              <% elsif event.starting_at.strftime("%d") == "03"  %>
                <p class="day"><%= event.starting_at.strftime("%drd") %></p>
              <% else %>
                <p class="day"><%= event.starting_at.strftime("%dth") %></p>
              <% end %>
            </div>
          </div>
        </div>

        <div class="event-card-text-body">
          <p><%= event.description %></p>
        </div>

        <div class="post-card-bottom">
          <div class="social-icons">
            <p>11</p><i class="fas fa-thumbs-up card-bottom-icon"></i>
            <p>18</p><i class="fas fa-comment card-bottom-icon"></i>
          </div>

          <div class="info-icons">
            <div class="event-card-text-bottom">
              <i class="fas fa-map-marker-alt card-bottom-icon event-card-bottom-icon "></i><p>My flat</p>
            </div>

            <div class="event-card-text-bottom">
              <i class="fas fa-clock card-bottom-icon event-card-bottom-icon"></i><p>5PM</p>
            </div>
          </div>
        </div>
      </div>
    <br>
    <% end %>
  </div>

<% end %>
</div>


