
  <div>
    <% posts.each do |post| %>
      <div class="post-card">
        <div class="post-card-header">
          <div class="post-card-header-avatar">
            <%= image_tag post.user.photo, class:"avatar-large" %>
          </div>
          <div class="post-card-header-title">
              <h3><%= post.title %></h3>
              <p> By <%= post.user.first_name %>, </p>
                <p> posted on <%= post.created_at.strftime("%b %e at %H:%M") %></p>
          </div>
        </div>
        <div class="post-card-body">
          <p><%= post.content %></p>
        </div>
        <div class="post-card-bottom d-flex">
          <span data-controller="like" class="post-likes">
              <span data-target="like.count"><%= post.get_likes.size %></span>
              <% if current_user.voted_for? post %>
                <%= link_to "", like_post_path(post), class:"fas fa-thumbs-up liked", data: {action:"click->like#post"}, method: :put, remote: :true %>
              <% else %>
                <%= link_to "", like_post_path(post), class:"fas fa-thumbs-up", data: {action:"click->like#post"}, method: :put, remote: :true %>
              <% end %>
          </span>
          <p><%= post.comments.size %></p><div><%= link_to "", post_path(post), class:"fas fa-comment card-bottom-icon"%></div>
          <p class= "label-base label-post-type"> <%= post.category%></p>
        </div>
      </div>
    <% end %>
    </div>


  </div>


