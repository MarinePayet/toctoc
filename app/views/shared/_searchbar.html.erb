<div class="searchbar">
  <%= form_tag services_path, method: :get, class: "w-100" do %>
    <% if params[:available] == 'true' %>
      <%= hidden_field_tag :available, true %>
    <% end %>
    <% if params[:loan] == 'true' %>
      <%= hidden_field_tag :loan, true %>
    <% end %>
    <% if params[:service] == 'true' %>
      <%= hidden_field_tag :service, true %>
    <% end %>
    <div class="d-flex">
      <%= text_field_tag :query,
        params[:query],
        class: " form-control-search string required search_query simple_form round-border",
        placeholder: "What are you looking for ?"
      %>
      <%= submit_tag "Search", class: "btn btn-green btn-radius-search " %>
    </div>
  <% end %>
</div>


