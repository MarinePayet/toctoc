
<h1>Events#index</h1>

  <br>
<div class="container">
  <div>
    <% if policy(Event).create? %>
    <%= link_to "New Event", new_event_path, class:"btn-radius btn-green " %>
    <% end %>
  </div>
<br>
  <div>
    <%  @events.each do |event| %>
    <div class="event-card-text">
      <div class="event-card-text-header">
        <div class="event-card-text-header-title">
          <h3> <%= event.title %> </h3>
          <p>By <%= event.user.first_name %> <%= event.user.last_name %> </p>
        </div>
        <div class="event-card-avatars">
          <div class="event-card-avatars-date">
            <p class="month"><%= event.starting_at.strftime("%b.") %></p>
            <p class="day"><%= event.starting_at.strftime("%dth") %></p>
          </div>
        </div>
      </div>
      <div class="event-card-text-body">
        <p><%= event.description %> </p>
      </div>
      <div class="post-card-bottom">
        <div class="social-icons">
          <p>11</p><i class="fas fa-thumbs-up card-bottom-icon"></i>
          <p>18</p><i class="fas fa-comment card-bottom-icon"></i>
        </div>
        <div class="info-icons">
          <div class="event-card-text-bottom">
            <i class="fas fa-map-marker-alt card-bottom-icon event-card-bottom-icon "></i><p class="location"><%= event.location %></p>
          </div>
          <div class="event-card-text-bottom">
            <i class="fas fa-clock card-bottom-icon event-card-bottom-icon"></i><p class="hour"><%= event.starting_at.strftime("%H:%M") %></p>
          </div>
        </div>
      </div>
    </div>

  <br>
    <% end %>

  </div>


</div>
