<div class="container">
<h1> <%= link_to "Create a new inbox", @new_inbox_path %></h1>


<% @inboxes.each do |inbox| %>
  <div class="inbox-container">
    <div class="inbox-header">
      <div class="inbox-sender">
      <a> From :  <%= inbox.participants.first.user.first_name %>
        <% inbox.participants #addavatar %>
      </a>
      </div>
    </div>
    <div class="inbox-body">
      <div class="inbox-title">
        <h1> <%= inbox.topic %></h1>
        <p> See all </p>

      </div>
      <div class="inbox-participants">
        <p> Participants <% inbox.participants.each do |participant|  %>
          <%= participant.user.first_name %>
          <%= participant.user == current_user ? "(you)" : "" %>
        <% end %></p>
      </div>
      <div class="inbox-message">
        <%= inbox.messages.present? ? inbox.messages.last.content : " " %>
      </div>
    </div>
    <div class="inbox-date">
      <a> On : <%= inbox.created_at.strftime("%b %e") %> </a>
    </div>
  </div>
<% end %>
</div>

