<div class="app-header">
  <h1 class="header-illustration"> <%= image_tag "https://res.cloudinary.com/dk85eoleo/image/upload/c_scale,w_150/v1606907598/mailing-list_xrd53l.png", alt: "alttext"%> </h1>
  <h2 class= "text-center pt-0 test2">New inbox</h2>
</div>
<div class="container">

<%= simple_form_for(@inbox, url: create_direct_message_path) do |f| %>
  <%= f.input :topic, input_html: {value: params[:query]} %>
  <div class="d-none">
    <%= f.input :participants, as: :check_boxes, collection: User.where(id: params[:user_id]).map { |user| [user.first_name, user.id, checked: true ] } %>
  </div>
  <%= f.input :message, as: :text %>
  <%= f.button :submit %>
<% end %>
</div>

