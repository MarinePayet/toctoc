<div class="message-container">
  <div class="message-card">
        <div class="message-body">
          <p class="dm-sender"><%= message.user.first_name %></ps>
          <small><%= message.created_at.strftime("at %k:%M on the %m/%e") %></small>
          <p class ="dm-content"><%= message.content %></p>
        </div>
        <div class="avatar-message">
          <% if message.user.photo.attached? %>
            <%= image_tag message.user.photo, class:"avatar"%>
          <% else %>
            <%= image_tag "avatar-standard.png", class:"avatar" %>
          <% end %>
        </div>

  </div>
</div>
