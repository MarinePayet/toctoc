 <div class="app-header">
  <%= render "shared/header" %>
  <h1 class="header-icon" > 📝 </h1>
  <h1>All messages from "<%= @inbox.topic  %>"</h1>
</div>

<div class="container">
<div class="inbox-title">
    <h1> <%= %></h1>
  </div>

  <% @inbox.messages.each do |message| %>
  <div class="message-container">
    <div class="inbox-message">
      <i class="author">
      <span><%= message.user.first_name %></span>
      <small><%= message.created_at.strftime("at %k:%M on the %m/%e") %></small>
      </i>
      <p><%= message.content %></p>
    </div>
  </div>
  <% end %>

  <div class="new-message">
    <%= simple_form_for [ @inbox, Message.new ], remote: true do |f| %>
      <%= f.input :content %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
